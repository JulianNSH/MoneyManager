<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".add.AddOtherFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bottom_rect"
            android:backgroundTint="@color/colorWhite"
            android:padding="10dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="Selectarea scopului"
                        android:layout_margin="5dp"/>

                    <AutoCompleteTextView
                        android:id="@+id/other_source"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/fg_rect"
                        android:backgroundTint="@color/white"
                        android:ems="10"
                        android:maxLines="1"
                        android:clickable="true"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:inputType="text"
                        android:hint="Tastați pentru selectare"
                        android:drawableRight="@android:drawable/arrow_down_float"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlueGrey_100"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Suma Curentă"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>

                        <EditText
                            android:id="@+id/current_amount"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_margin="5dp"
                            android:ems="8"
                            android:background="@drawable/fg_rect"
                            android:backgroundTint="@color/white"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:inputType="numberDecimal"
                            android:hint="Valoarea numerarului"/>
                    </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlueGrey_100"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="Ora și Data"
                            android:layout_margin="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/add_income_time"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/fg_rect"
                                android:backgroundTint="@color/white"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:ems="5"
                                android:inputType="time"
                                android:hint=" hh : mm"
                                android:gravity="center"/>
                            <EditText
                                android:id="@+id/add_income_date"
                                android:layout_width="fill_parent"
                                android:layout_height="35dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/fg_rect"
                                android:backgroundTint="@color/white"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:inputType="date"
                                android:ems="10"
                                android:hint="aaaa-LL-zz"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlueGrey_100"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="Comentariul"
                        android:layout_margin="5dp"/>

                    <EditText
                        android:id="@+id/commentScopeVal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/fg_rect"
                        android:backgroundTint="@color/white"
                        android:ems="10"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlueGrey_100"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/add_scope_btn"
                    android:layout_width="150sp"
                    android:layout_height="50sp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/neutral"
                    android:text="ADĂUGARE"
                    android:textSize="15sp"
                    android:foregroundGravity="center_vertical|center_horizontal"
                    app:cornerRadius="10sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>



</RelativeLayout>